@model asp_ecommerce.ViewModels.RegisterViewModel

<section class="row">
    <h5>Register Here</h5>
    <form class="col m10 s12" asp-controller = "Account" asp-action = "Register" method="post">
            <!-- <div asp-validation-summary="All" class="text-danger"></div> -->
            <div class="row">
                <div class="col m6 s12 input-field">
                    <input asp-for="FName" class="validate" />
                    <label asp-for="FName"></label>
                    <span asp-validation-for="FName" class="text-danger"></span>
                </div>
                
                <div class="col m6 s12 input-field">
                    <input asp-for="LName" class="validate" />
                    <label asp-for="LName"></label>
                    <span asp-validation-for="LName" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col m10 s12 input-field">
                    <input asp-for="Email" class="validate" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col m10 s12 input-field">
                    <input asp-for="UserName" class="validate" />
                    <label asp-for="UserName"></label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col m6 s12 input-field">
                    <input asp-for="Password" class="validate" />
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            
                <div class="col m6 s12 input-field">
                    <input asp-for="ConfirmPassword" class="validate" />
                    <label asp-for="ConfirmPassword"></label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col m10 s12 input-field">
                    <input asp-for="Birthday" class="datepicker" />
                    <label class="active" asp-for="Birthday"></label>
                    <span asp-validation-for="Birthday" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn waves-effect waves-light">Register</button>
    </form>
</section>


